@import "variables.styl"

.flash-slider
  transition opacity .2s

.flash-slider.opacity-0
  max-height 0

.flash-slider.opacity-1
  max-height 1000px

.remaining-wrapper
  width 90px
  text-align center
  color #888

  .remaining
    position relative
    background #ddd
    border-radius 10px
    height 10px
    overflow hidden
    width 100%
    margin-top 5px

    span
      position absolute
      top 0
      bottom 0
      left 0
      background primary-color
