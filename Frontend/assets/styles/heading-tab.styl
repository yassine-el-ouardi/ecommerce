@import "variables.styl"

.heading-tab-wrapper
  .tab-heading
    gap 15px
    flex-wrap wrap
    display flex

    label
      height 120px
      width 120px
      display flex

      align-items center
      cursor pointer
      padding 15px
      justify-content center
      text-align center
      flex-direction column

      background #f4f5f5
      border 1px solid #eee
      border-radius border-radius

      &:hover
        background #eee

      &:active
        background #f4f5f5
        border-color #ddd

      &.active
        background #fff
        border 1px solid #ddd
        cursor auto

        &:hover
        &:active
          border 1px solid #ddd
          background #fff

      input
        max-width 0
        max-height 0
        opacity 0


      i
        min-height 40px
        min-width 40px

        & + span
          padding 5px 0 10px

  .tab-content
    padding-top 15px

