.icon-input
  position relative

  i
    opacity .6
    text-align center
    position absolute
    left 10px
    top 50%
    transform translateY(-50%)

  &.right-icon
    input
      padding-right 40px !important

    i:last-child
      cursor pointer
      left auto
      right 10px

  input
    padding-left 40px !important
