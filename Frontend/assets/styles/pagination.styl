@import "variables.styl"

.pagination
  border-radius border-radius
  background #fff
  float right
  display flex
  overflow hidden
  border 1px solid #ddd

  li
    height 35px
    display flex
    align-items center
    justify-content center
    min-width 35px
    flex-grow 1
    cursor pointer
    user-select none
    transition all .1s
    border-right 1px solid #eee

    &:hover
      background primary-lite-color

    &:active
      color primary-foreground
      background primary-color

    &:last-child
      border-right 0

    .icon
      opacity .6
      height 18px
      width 18px
      min-width 18px

  .disabled
    opacity .8
    cursor not-allowed

    &:hover
      background #fff

  .page.disabled
    opacity 1
    font-weight 600
    background primary-color
    color white
