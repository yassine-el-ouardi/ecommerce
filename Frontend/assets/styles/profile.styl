@import "variables.styl"

.user-profile-wrapper
  .card
    & > .flex
      margin 0 -10px
      & > div
        max-width 50%
        width 50%
        min-width 400px
        padding 0 10px
        margin-bottom 20px

        .user-form
          margin 0
          max-width 10000px
          box-shadow none
          padding-top 0

          .form-title
            text-align left
            margin-bottom 15px
            padding 10px 0
            border-bottom 1px solid #ddd

.email-login
  .card
    & > .flex
      & > div
        margin-left auto
        margin-right auto
        &:first-child
          border none

//RESPONSIVE
@media only screen and (max-width: 768px)
  .user-profile-wrapper
    .card
      & > .flex
        & > div
          margin-bottom 15px

@media only screen and (max-width: 576px)
  .user-profile-wrapper
    .card
      & > .flex
        & > div
          max-width 100%
          width 100%
          min-width 0
