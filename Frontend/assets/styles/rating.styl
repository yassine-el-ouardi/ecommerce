@import "variables.styl"




.rating-popup
  .img-container
    width 25%
    position relative

    .close-btn
      z-index 1
      line-height 1
      position absolute
      top 0
      right 0
      height 24px
      width  24px
      display flex
      align-items center
      justify-content center
      border-radius 100px
      border 1px solid #ddd
      background #fff

      i
        margin 0
        opacity .7
        height 12px
        width 12px
        min-width 12px

    .img-wrapper
      overflow hidden
      border-radius border-radius
      position relative

      img
        top 50%
        transform translate(-50%, -50%)

  .pop-over-inner
    border none
    width 450px

    textarea
      width 100%
      height 180px


.payment-popup
  .pop-over-inner
    width 100%
    max-width 450px

.star-btn
  span
    cursor pointer

  &+.star-fill
    span
      cursor pointer

.star-wrapper
  position relative
  font-size 1.3em
  color rating-color

  .star-fill
    position absolute
    left 0
    top 0
    overflow hidden
    color rating-color


