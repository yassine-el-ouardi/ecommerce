@import "variables.styl"

header.no-banner
  padding-top 0
  &:after
    display none



header
  padding-top 4%
  display flex
  flex-direction column
  background header-bg

  &:after
    background #eee
    content ''

  &:after
  .top-banner
    position absolute
    top 0
    left 0
    right 0
    padding-bottom 4%

  .top-banner
    z-index 1

    img
      height 100%
      width 100%
      position absolute
      top 0
      bottom 0
      left 0
      right 0


  .top-wrapper
    color header-color
    font-size .9em
    opacity .85
    border-bottom 1px solid header-border

    .left
    .right
      margin 0 -10px

      a
        padding 7.5px 10px

        span > span
          margin-right 5px

  .container-fluid.flex
    margin-top 10px
    margin-bottom 10px

  .logo
    img
      object-fit contain
      max-height 35px

  .arrow-down
    height 18px
    width 18px

  .dropdown
    z-index 11
    min-width 150px
    padding 10px 0
    display none
    position absolute
    top 100%
    left auto
    right 0
    background white
    color font-color
    border-radius border-radius
    box-shadow 1px 2px 10px rgba(0, 0, 0, .1)

    button.clear-btn
    a
      height auto !important
      border-radius 0
      text-align left
      width 100%
      font-size 1em
      font-weight 400
      line-height 1
      display block
      box-shadow none
      padding 10px 20px

      &:hover
        background #eee

      &:active
        background #ddd

  .active
    display block

  button
  input
    height btn-height !important

  .left-area
  .right-area
    width 250px

  .right-area
    button
    .cart-btn
      color header-color
      font-weight 600
      font-size 1.05em

    .cart-badge
      position absolute
      top -4px
      left 12px
      background primary-color
      border 1px solid header-bg
      border-radius 100%
      text-align center
      height 22px
      width 22px
      line-height 20px
      font-size 12px
      z-index 1
      color #fff

  .bottom-area
    border-top 1px solid header-border
    border-bottom 1px solid #DDD
    font-size 1.05em
    color header-color

    & > div

      & > .flex
        margin 0 -10px

      a
        font-size .95em
        span
          text-transform uppercase
          font-size .9rem
          padding 12.5px 10px

        &:hover
          background rgba(0, 0, 0, .06)

        &:active
          background rgba(0, 0, 0, .1)

//RESPONSIVE

@media only screen and (max-width: 992px)
  header
    .top-banner.banner-wrapper
      button
        top 50%
        transform translateY(-50%)
        right 2.5px

    .left-area
    .right-area
      width auto

    form
      margin 0 20px

@media only screen and (max-width: 768px)
  header

    .top-wrapper
      padding 5px 0
      font-size .85em

      .left
      .right
        justify-content left
        margin 0 -7.5px

        a
          padding 5px 7.5px

          span > span
            display none

    .bottom-area
      overflow auto

      & > div
        a
          span
            padding 10px

    button
    input
      height 40px !important

    & > .flex
      display block

      .logo
        img
          width auto
          height 25px

      .right-area
        position absolute
        top -10px
        right 15px

        button
          .cart-icon
            height 25px
            width 25px

    form
      margin 5px 0 0


@media only screen and (max-width: 576px)
  header
    padding-top 6%

    &:after
    .top-banner
      padding-bottom 6%


@media only screen and (max-width: 420px)
  header
    .top-wrapper
      .sided

        .left a
        .right a
          padding-top 0
          padding-bottom 0

        .left
          justify-content space-between

          &>a:first-child
          &>span
            display none

@media only screen and (max-width: 320px)
  header
    .right-area
      .cart-btn
        .title
          display none
